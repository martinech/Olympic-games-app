@model Obligatorio2.Models.UsuarioDto

@{
    ViewData["Title"] = "Login";
}

<h2>Bienvenido</h2>

@if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger">
        @TempData["MensajeError"]
    </div>
}


<form asp-action="Login" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="email" class="control-label">Email</label>
        <input asp-for="email" class="form-control" />
        <span asp-for="email" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="password" class="control-label">Password</label>
        <input asp-for="password" class="form-control" />
        <span asp-for="password" class="text-danger"></span>

    </div>

    <div class="row mt-5">
        <div class="col-2">
            <a asp-action="Login" class="btn btn-secondary">Cancelar</a>
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-success">Iniciar sesion</button>
        </div>
    </div>
</form>