@model Obligatorio2.Models.Disciplina

@{
    ViewData["Title"] = "Eliminar Disciplina";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}

<!-- Mostrar detalles del tema a eliminar -->
<div class="mt-3">
    <h3>Est치s a punto de eliminar la siguiente disciplina:</h3>
    <p>ID: @Model.Id</p>
    <p>Nombre: @Model.Nombre</p>
    <p>Nombre: @Model.AnioDeIntegracion</p>
</div>

<!-- Confirmaci칩n de la acci칩n de eliminaci칩n -->
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="row mt-5">
        <div class="col-2">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
        </div>
    </div>
</form>